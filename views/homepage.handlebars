<div class="posts">
  {{#each posts as |post|}}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <a href="/post/{{post.id}}">{{post.title}}</a>
      </h2>
      <div>
        Posted by {{user.name}} on {{format_date created_at}}
      </div>
    </div>
    <div class="card-body">
      {{body}} 
    </div>
  </article>
  {{/each}}
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</div>


{{#each users as |user| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <h2>{{{get_emoji}}} {{user.name}}</h2>
  </div>
  <div class="col-md-6">
    <h3><a href="mailto:{{user.email}}">{{user.email}}</a></h3>
  </div>
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</div>
{{/each}}

<script src="/js/homepage.js"></script>